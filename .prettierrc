{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "bracketSameLine": true,

  "importOrder": [
    "^react(.*)",
    "<THIRD_PARTY_MODULES>",
    "^@/pages(.*)$",
    "^@/components(.*)$",
    "^@/lib(.*)$",
    "^@/assets(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
